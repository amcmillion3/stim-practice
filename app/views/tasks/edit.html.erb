<h1>Edit Task</h1>

<%= form_with(model: @task) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :developer %>
    <%= form.text_field :developer %>
  </div>

  <div class="actions">
    <%= form.submit "Update Task" %>
  </div>
<% end %>

<%= link_to 'Back to tasks', tasks_path %>
